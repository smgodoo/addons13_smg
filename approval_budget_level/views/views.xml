<odoo>
    <data>

        <record id="approval_budget_list" model="ir.ui.view">
            <field name="name">approval_budget_list</field>
            <field name="model">approval.budget</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="budget_min"/>
                    <field name="budget_max"/>
                    <field name="approver"/>
                </tree>
            </field>
        </record>

        <record id="approval_budget_form" model="ir.ui.view">
            <field name="name">approval_budget_form</field>
            <field name="model">approval.budget</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Approvals budget Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="budget_min"/>
                                <field name="approver"/>
                            </group>
                            <group>
                                <field name="budget_max"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="approval_budget_action" model="ir.actions.act_window">
            <field name="name">All Approvals Budget</field>
            <field name="res_model">approval.budget</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="approvals_budget_menu"
            parent="approvals.approvals_menu_config"
            name="Approval Budget"
            action="approval_budget_action"
            sequence="10"/>

        <record id="approval_type_inherit_form" model="ir.ui.view">
            <field name="name">approval_type_inherit_form</field>
            <field name="model">approval.category</field>
            <field name="inherit_id" ref="approvals.approval_category_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='is_manager_approver']" position="after">
                    <field name="is_hod_approver"/>
                    <field name="is_ceo_approver"/>
                </xpath>
<!--                <xpath expr="//page[@name='options']" position="after">-->
<!--                    <page string="Department" name="department_configure">-->
<!--                        <field name="department_s">-->
<!--                            <tree>-->
<!--                                <field name="name"/>-->
<!--                                <field name="department"/>-->
<!--                            </tree>-->
<!--                            <form>-->
<!--                                <sheet>-->
<!--                                    <group>-->
<!--                                        <field name="name"/>-->
<!--                                        <field name="department"/>-->
<!--                                    </group>-->
<!--                                </sheet>-->
<!--                            </form>-->
<!--                        </field>-->
<!--                    </page>-->
<!--                </xpath>-->
            </field>
        </record>

        <record id="employee_inherit_form" model="ir.ui.view">
            <field name="name">employee_inherit_form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='parent_id']" position="after">
                    <field name="hod"/>
                </xpath>
            </field>
        </record>

        <record id="res_company_inherit_form" model="ir.ui.view">
            <field name="name">res_company_inherit_form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="before">
                    <field name="company_ceo"/>
                </xpath>
            </field>
        </record>

        <record id="approval_category_search" model="ir.ui.view">
            <field name="name">approval_category_search</field>
            <field name="model">approval.category</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="name"/>
                    <filter name="filter_by_parent_is_set" string="Parent is set" domain="[('parent_id', '!=', False)]"/>
                    <group string="Group By">
                        <filter name="group_by_parent" string="By Parent" context="{'group_by': 'parent_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="approval_request_inherit_form" model="ir.ui.view">
            <field name="name">approval_request_inherit_form</field>
            <field name="model">approval.request</field>
            <field name="inherit_id" ref="approvals.approval_request_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="attrs">{'invisible':1}</attribute>
                </xpath>
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="approval_subject"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
